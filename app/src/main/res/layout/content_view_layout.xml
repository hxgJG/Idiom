<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idiom_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_222"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="成语大全" />

        <Space
            android:id="@+id/mark_space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1dp"
            app:layout_constraintTop_toBottomOf="@id/idiom_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/left_parenthesis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="（"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mark_space"
            app:layout_constraintTop_toBottomOf="@id/idiom_tv" />

        <TextView
            android:id="@+id/pinyin_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="7dp"
            android:paddingEnd="0dp"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/idiom_tv"
            app:layout_constraintStart_toStartOf="@id/idiom_tv"
            app:layout_constraintTop_toBottomOf="@id/idiom_tv"
            tools:text=" cheng yu da quan cheng yu da quan cheng yu da quan）" />

        <TextView
            android:id="@+id/left_explain_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/left_book_mark"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mark_space"
            app:layout_constraintTop_toBottomOf="@id/pinyin_tv" />

        <TextView
            android:id="@+id/explain_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/idiom_tv"
            app:layout_constraintStart_toStartOf="@id/idiom_tv"
            app:layout_constraintTop_toBottomOf="@id/pinyin_tv"
            tools:text="释义】：对成语的解释释义：对成语的解释释义：对成语的解释" />

        <TextView
            android:id="@+id/left_from_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/left_book_mark"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mark_space"
            app:layout_constraintTop_toBottomOf="@id/explain_tv" />

        <TextView
            android:id="@+id/from_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/idiom_tv"
            app:layout_constraintStart_toStartOf="@id/idiom_tv"
            app:layout_constraintTop_toBottomOf="@id/explain_tv"
            tools:text="出处】：成语的出处出处：成语的出处出处：成语的出处出处：成语的出处" />

        <TextView
            android:id="@+id/left_example_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/left_book_mark"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/mark_space"
            app:layout_constraintTop_toBottomOf="@id/from_tv" />

        <TextView
            android:id="@+id/example_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_222"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/idiom_tv"
            app:layout_constraintStart_toStartOf="@id/idiom_tv"
            app:layout_constraintTop_toBottomOf="@id/from_tv"
            tools:text="例子】：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子例子：成语的使用例子" />

        <ImageView
            android:id="@+id/iv_slogan"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_slogan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/example_tv"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>